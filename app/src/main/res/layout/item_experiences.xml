<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewLuar"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintcardBuatExperiencetapibuatRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/judul"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Belajar Microsoft Excel dengan Mrs. Faruzan"
                android:maxLines="2"
                android:layout_marginHorizontal="10dp"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@id/tombolEdit"
                app:layout_constraintStart_toStartOf="@id/constraintcardBuatExperiencetapibuatRecycleView"
                app:layout_constraintTop_toTopOf="@id/constraintcardBuatExperiencetapibuatRecycleView" />

            <ImageButton
                android:id="@+id/tombolEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/putih_magnolia"
                android:src="@drawable/logo_edit"
                app:layout_constraintBottom_toTopOf="@id/tombolDelete"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/tombolDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/merah_alert_munsell"
                android:src="@drawable/logo_delete"
                app:layout_constraintBottom_toBottomOf="@id/constraintcardBuatExperiencetapibuatRecycleView"
                app:layout_constraintEnd_toEndOf="@id/constraintcardBuatExperiencetapibuatRecycleView"/>


            <TextView
            android:id="@+id/deskExpe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Lorem ipsum odor amet, consectetuer adipiscing elit. At nascetur cursus erat euismod, sollicitudin sodales tortor senectus semper. Tristique purus elementum magna nunc maximus augue per suspendisse sociosqu."
            app:layout_constraintStart_toStartOf="@id/judul"
            app:layout_constraintEnd_toStartOf="@id/tombolDelete"
            app:layout_constraintTop_toBottomOf="@id/judul"
            app:layout_constraintBottom_toBottomOf="@id/constraintcardBuatExperiencetapibuatRecycleView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

